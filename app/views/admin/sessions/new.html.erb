<%= render "admin/shared/links" %>
  <div class="container">
    <div class="mt-4 mx-5 col-3">
      <h2 class="bg-light text-center">管理者ログイン</h2>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="row">
        <div class="column">
          <div class="mt-5">
            <%= f.label :メールアドレス %>
          </div>
          <div class="mt-5">
            <%= f.label :パスワード %>
          </div>          
        </div>
        <div class="column">
          <div class="field mx-5 mt-5">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
          <div class="field mx-5 mt-5">
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="field mx-5">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
          <div class="actions mx-5 mt-3">
            <%= f.submit "ログイン", class: "btn btn-success" %>
          </div>          
        </div>
      </div>
    <% end %>
  </div>



