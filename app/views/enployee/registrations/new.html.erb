<%= render "enployee/shared/links" %>
<div class="container">
  <div class="mt-4 mx-5 col-3">
    <h2 class="bg-light text-center">新規登録</h2>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="center">
      <div class="row">
        <div class="column">
          <div class="mt-3">
            <%= f.label :メールアドレス %>
          </div>
          <div class="mt-3">
            <%= f.label :性 %>
          </div>
          <div class="mt-3">
            <%= f.label :名 %>
          </div>
          <div class="mt-3">
            <%= f.label :性カナ %>
          </div>
          <div class="mt-3">
            <%= f.label :名カナ %>
          </div>
          <div class="mt-3">
            <%= f.label :パスワード %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %>
          </div>
          <div class="mt-3">
            <%= f.label :パスワード（確認用） %>
          </div>
        </div>
        <div class="column mx-4">
          <div class="field mt-3">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
          <div class="field mt-3">
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
          </div>
          <div class="field mt-3">
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
          </div>
          <div class="field mt-3">
            <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
          </div>
          <div class="field mt-3">
            <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
          </div>
          <div class="field mt-3">
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
          <div class="field mt-3">
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
          <div class="actions mt-3 mx-5">
            <%= f.submit "新規登録", class: 'btn btn-success' %>
          </div>
        </div>
      </div>
    </div>

  <% end %>
</div>





